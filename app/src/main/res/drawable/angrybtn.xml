<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle" >
    <corners
        android:radius="100px"/>

    <gradient
        android:angle="45"
        android:centerX="33%"
        android:centerColor="#FFF"
        android:startColor="#FFF"
        android:endColor="#FFF"
        android:type="linear"/>

    <padding
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp"
        android:left="10dp"/>

    <size
        android:width="270dp"
        android:height="60dp"/>

    <stroke
        android:width="@dimen/gradient_btnShape_width"
        android:color="#000"/>
</shape>