<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chiantiClean"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.RegistrationFragment"
    tools:layout_editor_absoluteY="25dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/chiantiClean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.gildStudios.DiTo.androidApp.customs.CustomEditText
            android:id="@+id/registrationName"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:background="@drawable/text_ellipse"
            android:drawableStart="@drawable/ic_avatar"
            android:ems="10"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:hint="@string/edit_username"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/chiantiClean"
            android:textColorHint="#848484"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_gravity="center"

        android:textColorHint="@color/chiantiClean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4">

        <com.gildStudios.DiTo.androidApp.customs.CustomEditText
            android:id="@+id/registrationEmail"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:background="@drawable/text_ellipse"
            android:drawableStart="@drawable/ic_mail"
            android:ems="10"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:hint="@string/edit_eMail"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/chiantiClean"
            android:textColorHint="#848484"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_gravity="center"
        android:textColorHint="@color/chiantiClean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <com.gildStudios.DiTo.androidApp.customs.CustomEditText
            android:id="@+id/registrationPassword"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:background="@drawable/text_ellipse"
            android:drawableStart="@drawable/ic_password"
            android:ems="10"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:hint="@string/edit_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/chiantiClean"
            android:textColorHint="#848484"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.457" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_multi_state_white"
        android:fontFamily="@font/bold"
        android:text="@string/text_regitstrationBtn"
        android:textAllCaps="false"
        android:textColor="@color/chiantiClean"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

</android.support.constraint.ConstraintLayout>