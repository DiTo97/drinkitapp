<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView33"
        android:layout_width="372dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="Verify it is yourself, please!"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="392dp"
        android:layout_height="49dp"
        android:layout_gravity="center"

        android:layout_marginTop="10dp"
        android:textColorHint="@color/chiantiClean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33">

        <com.gildStudios.DiTo.androidApp.customs.CustomEditText
            android:id="@+id/credentialMail"
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:background="@drawable/text_ellipse_chianti"
            android:drawableStart="@drawable/ic_mail"
            android:ems="10"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:hint="@string/edit_eMail"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/chiantiClean"
            android:textColorHint="#848484"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="392dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/chiantiClean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <com.gildStudios.DiTo.androidApp.customs.CustomEditText
            android:id="@+id/credentialPassword"
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:background="@drawable/text_ellipse_chianti"
            android:drawableStart="@drawable/ic_password"
            android:ems="10"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:hint="@string/edit_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/chiantiClean"
            android:textColorHint="#848484"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.457" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/buttonPositive"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_multi_state"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/whiteClean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNegative"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonNegative"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_multi_state"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/whiteClean"
        app:layout_constraintEnd_toStartOf="@+id/buttonPositive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

</android.support.constraint.ConstraintLayout>